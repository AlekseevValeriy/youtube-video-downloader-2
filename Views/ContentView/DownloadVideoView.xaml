<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="YoTuViLo2.Views.DownloadVideoView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="auto,auto,*"
        ColumnSpacing="6"
        RowDefinitions="auto,*">
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Clicked="StartDownloadClicked" />
        <ScrollView
            Grid.Row="0"
            Grid.Column="2"
            Orientation="Vertical">
            <Editor x:Name="Output" AutoSize="TextChanges" />
        </ScrollView>
    </Grid>
</ContentView>
