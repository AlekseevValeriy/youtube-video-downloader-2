<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="YoTuViLo2.Views.ToolsSettingsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:YoTuViLo2.ViewModels"
    x:DataType="vm:ToolsSettingsViewViewModel">

    <ScrollView Orientation="Vertical">
        <Grid RowDefinitions="*,auto" RowSpacing="12">
            <Grid
                Grid.Row="0"
                Margin="6"
                ColumnDefinitions="200,*"
                ColumnSpacing="12"
                RowDefinitions="auto,auto,auto,auto,auto"
                RowSpacing="18">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Text="Download tool"
                    VerticalOptions="Center" />
                <HorizontalStackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Spacing="6">
                    <Entry
                        HorizontalOptions="Start"
                        IsReadOnly="True"
                        Text="{Binding DownloadTool}"
                        VerticalOptions="Center"
                        WidthRequest="450" />
                    <Button Command="{Binding SetDownloadToolPathCommand}" Text="Set" />
                </HorizontalStackLayout>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Text="Convert tool"
                    VerticalOptions="Center" />
                <HorizontalStackLayout
                    Grid.Row="1"
                    Grid.Column="1"
                    Spacing="6">
                    <Entry
                        HorizontalOptions="Start"
                        IsReadOnly="True"
                        Text="{Binding ConvertTool}"
                        VerticalOptions="Center"
                        WidthRequest="450" />
                    <Button Command="{Binding SetConvertToolPathCommand}" Text="Set" />
                </HorizontalStackLayout>
            </Grid>
            <Button
                Grid.Row="1"
                Command="{Binding SaveCommand}"
                HorizontalOptions="End"
                Text="Save"
                VerticalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentView>
